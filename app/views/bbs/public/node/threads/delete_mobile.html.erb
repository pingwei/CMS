<div class="contentBbsThreads">

<% if @use_password %>
<div class="deleteForm" id="deleteForm">
  <h2 class="formTitle">削除フォーム</h2>
  
  <% form_for :item, :url => "#{@node_uri}delete" do |f| %>
    <% if @delete_error %>
    <div class="errorExplanation">投稿No.と削除パスを正しく入力してください。</div>
    <% end %>
    <input type="hidden" name="_method" value="DELETE" />
    
    投稿No. <input class="no" type="text" name="no" value="<%= h(params[:no]) %>" /><br />
    <br />
    削除パス <input class="password" type="password" name="password" value="<%= h(params[:password]) %>" /><br />
    <br />
    
    <div class="submitters">
      <input type="submit" value="削除" />
    </div>
  <% end %>
</div>
<% end %>

<div class="back"><%= link_to "戻る", "#{@node_uri}?#{query}" %></div>

</div>
