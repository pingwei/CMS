<% if defined?(res) %>
<div class="title"><%=h item.title %></div>
<div class="bpdy"><%=hbr item.body %></div>
<% else %>
<div class="title"><%= link_to h(item.title), "#{@node_uri}#{item.thread_id}/?#{query}" %></div>
<% end %>
<div class="date">No.<%=h item.id %> | <%=h safe{item.created_at.strftime('%Y年%-m月%-d日 %H:%M')} %></div>
<div class="poster">
  <span class="name"><%=h item.name %></span>
  <% if @show_email && !item.email.blank? %>
  | <span class="email"><%= email_to 'Email', item.email %></span><% end %>
  <% if @show_uri && !item.uri.blank? %>
  | <span class="uri"><%= link_to 'URL', item.uri, :target => "_blank" %></span><% end %>
</div>
