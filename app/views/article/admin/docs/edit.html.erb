<% form_for :item, :url => {:action => :update},
  :html => {:method => :put, :multipart => true, :id => 'itemForm', :autocomplete => "off"} do |f| %>
  
<%= f.error_messages %>

<% if @checker
checkbox = check_box_tag(:link_check, 0, params[:link_check] == "0") +
  %Q(<label for="link_check">エラーを無視する</label>)
%><%= @checker.notice_messages(:checkbox => checkbox) %>
<% end %>

<%= render :partial => 'form', :locals => {:f => f} %>

<%= submit(@item.states) %>

<% end %>
