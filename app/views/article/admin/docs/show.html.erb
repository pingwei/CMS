<% inline_id = @item.unid %>
<%= init_tiny_mce :readonly => true, :document_base_url => "/_admin/sys/#{inline_id}/inline_files/" %>

<br />
<table class="show">
  <tr>
    <th>記事番号</th>
    <td><%= @item.id %></td>
  </tr><tr>
    <th>記事URL番号</th>
    <td colspan="3"><%= @item.name %></td>
  </tr>
  <% if uri = @item.public_full_uri %>
  <tr>
    <th>記事URL</th>
    <td><div><%= link_to(uri, uri, :target => '_blank') %></div></td>
  </tr>
  <% end %>
</table>

<table class="show">
  <tr>
    <th>タイトル</th>
    <td><%=h @item.title %></td>
    <th style="width: 60px;">言語</th>
    <td style="width: 150px;"><%=h @item.language.title if @item.language %></td>
  </tr>
  <tr style="display:none;">
    <th>ヘッダー</th>
    <td colspan="3"><%= hbr(@item.head) %></td>
  </tr>
  <tr>
    <th colspan="4">内容</th></tr><tr>
    <td colspan="4" class="mceEditor">
      <%= text_area_tag 'viewBody', @item.body, :class => 'mceEditor', :style => 'width:100%' %>
    </td>
  </tr>
</table>

<table class="show">
  <tr>
    <th>分野</th>
    <td colspan="3"><%= @item.category_items.collect {|c| h(c.title) }.join('， ') %></td>
  </tr><tr>
    <th>属性</th>
    <td colspan="3"><%= @item.attribute_items.collect {|c| h(c.title) }.join('， ') %></td>
  </tr><tr>
    <th>地域</th>
    <td colspan="3"><%= @item.area_items.collect {|c| h(c.title) }.join('， ') %></td>
  </tr>
</table>

<table class="show">
  <tr>
    <th>新着情報表示</th>
    <td colspan="3">
      <%= safe{@item.recent_status.name} %>
    </td>
  </tr><tr>
    <th>記事一覧表示</th>
    <td colspan="3">
      <%= safe{@item.list_status.name} %>
    </td>
  </tr><tr>
    <th>イベントカレンダー表示</th>
    <td colspan="3">
      <%= safe{@item.event_status.name} %>
    </td>
  </tr>
</table>

<table class="show">
  <tr>
    <th>関連ワード</th>
    <td><%= @item.tags.collect {|c| h(c.word) }.join('， ') %></td>
  </tr>
</table>

<table class="show">
  <tr>
    <th>関連記事</th>
    <td colspan="3"><%= @item.rel_docs.collect {|c| h(c.title) }.join('<br />') %></td>
  </tr>
</table>

<table class="show">
  <tr>
    <th><%= @item.locale(:agent_state) %></th>
    <td><%= @item.agent_status.name %></td>
  </tr>
</table>

<% if !@item.mobile_title.blank? || !@item.mobile_body.blank? %>
<br /><p class="form">携帯向け</p>

<table class="show">
  <tr>
    <th><%= @item.locale(:mobile_body) %></th>
    <td><%= hbr @item.mobile_body %></td>
  </tr>
</table>
<% end %>

<%= google_map_view     @item %>
<%= inquiry_view        @item %>
<%= recognizer_view     @item %>
<%= task_view           @item %>
<%= editable_group_view @item %>
<%= creator_view        @item %>
