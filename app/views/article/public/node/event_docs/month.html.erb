<div class="contentArticleEventDocs">

<h2><%= "#{@calendar.year}年#{@calendar.month}月" %></h2>

<table class="calendar">
  <% @items.each do |item| %><tr>
    <td class="<%= item[:date_class] %>"><%= item[:anchor] %><%= item[:date] %></td>
    <td class="<%=h item[:attr_class] %>"><span class="attribute"><%=h item[:attr_title] %></span></td>
    <td class="title"><%= link_to h(item[:doc].title), item[:doc].public_uri %></td>
  </tr><% end %>
</table>

<div class="pagination">
  <%= link_to("&lt;前の月", @calendar.prev_month_uri, :class => "prevMonth") if @prev_link %>
  <span class="separator">|</span>
  <%= link_to("次の月&gt;", @calendar.next_month_uri, :class => "nextMonth") if @next_link %>
</div>

</div>
