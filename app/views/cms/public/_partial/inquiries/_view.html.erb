<%

return if !item.inquiry || !item.inquiry.visible?

%><div class="inquiry">
  <h2>お問い合わせ</h2>
  <% if item.inquiry.group
   %><div class="section"><%=h item.inquiry.group.name %></div><% end %>
  <% if !item.inquiry.charge.blank?
   %><div class="charge"><%=h item.inquiry.charge %></div><% end %>
  <% if !item.inquiry.tel.blank?
   %><div class="tel"><span class="label">電話</span>：<%=h item.inquiry.tel %></div><% end %>
  <% if !item.inquiry.fax.blank?
   %><div class="fax"><span class="label">ファクシミリ</span>：<%=h item.inquiry.fax %></div><% end %>
  <% if item.inquiry_email_setting != "hidden" && safe{item.inquiry.email} && !item.inquiry.email.blank?
   %><div class="email"><span class="label">E-Mail</span>：<%= email_to item.inquiry.email %></div><% end %>
</div>
