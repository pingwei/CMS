<%

return if !item.inquiry || !item.inquiry.visible?

%><div class="inquiry">
  <h2>お問い合わせ</h2>
  <% if item.inquiry.group
   %><div class="section"><%=h item.inquiry.group.name %></div><% end %>
  <% if !item.inquiry.charge.blank?
   %><div class="charge"><%=h item.inquiry.charge %></div><% end %>
  <% if !item.inquiry.tel.blank?
   %><div class="tel">電話：<%=h item.inquiry.tel %></div><% end %>
  <% if !item.inquiry.fax.blank?
   %><div class="fax">ファクシミリ：<%=h item.inquiry.fax %></div><% end %>
  <% if safe{item.inquiry.email} && !item.inquiry.email.blank?
   %><div class="email">E-Mail：<%= email_to item.inquiry.email %></div><% end %>
</div>
