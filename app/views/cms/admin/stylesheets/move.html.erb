<% form_for :item, :url => "?do=move", :html => {:method => :put} do |f| %>
  
<%= f.error_messages %>

<table class="show">
  <tr>
    <th><%= @item.locale :path %></th>
    <td><%= @root.gsub(@base_uri[0], @base_uri[1]) %>/
      <%= f.text_field :path, :class => "nameEn", :style => "width: 500px;" %></td>
  </tr>
</table>

<%= submit :edit %>

<% end %>
