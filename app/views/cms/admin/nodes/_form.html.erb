<table class="show">
  <%= concept_and_layout_form f %>
  <tr>
    <th><%= @item.locale(:content_id) %></th>
    <td><%= f.select(:content_id, Core.site.contents.collect{|i| [i.name, i.id]}, :include_blank => Cms::Lib::Modules.module_name(:cms)) %></td>
