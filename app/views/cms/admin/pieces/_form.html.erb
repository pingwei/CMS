<table class="show">
  <tr>
    <th><%= @item.locale :state %></th>
    <td><%= f.radio_buttons :state, @item.states, :class => 'states' %></td>
  </tr>
  <%= concept_form f %>
  <tr>
    <th><%= @item.locale(:content_id) %></th>
    <td><%= f.select(:content_id, Core.site.contents.collect{|i| [i.name, i.id]}, :include_blank => Cms::Lib::Modules.module_name(:cms)) %></td>
  </tr><tr>
    <th><%= @item.locale(:model) %></th>
    <td><%= f.select :model, @models %></td>
  </tr><tr>
    <th><%= @item.locale :name %></th>
    <td><%= f.text_field :name, :class => 'id' %></td>
  </tr><tr>
    <th><%= @item.locale :title %></th>
    <td><%= f.text_field :title, :class => 'name' %></td>
  </tr><tr>
    <th><%= @item.locale :view_title %></th>
    <td><%= f.text_field :view_title, :class => 'name' %></td>
  </tr>
</table>
<%= observe_field(:item_content_id, :update => :item_model, :with => 'content_id', :on => 'change', :url => {:action => :models}) %>

<%= creator_form f %>
