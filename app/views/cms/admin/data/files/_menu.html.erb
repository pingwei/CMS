<div class="actionMenu">
<%= action_menu :new if Core.user.has_priv?(:create, :item => Core.concept) %>
<%= action_menu :index %>
<%= action_menu :show %>
<%= action_menu :edit      if safe{@item.editable?} %>
<% if params[:action] == 'show' %>
<%= link_to(:publish, {:do => :publish}, :confirm => '公開してよろしいですか？') if safe{@item.publishable?} %>
<%= link_to(:close, {:do => :close}, :confirm => '公開を終了してよろしいですか？') if safe{@item.closable?} %>
<% end %>
<%= action_menu :destroy   if safe{@item.deletable?} %>
<span class="separator"></span>
<%= link_to 'ファイル', cms_data_files_path %>
<%= link_to 'フォルダ', cms_data_file_nodes_path %>
</div>
