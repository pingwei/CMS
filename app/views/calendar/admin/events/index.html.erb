<%= render :partial => 'search' %>

<table class="index">

  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 60px; text-align: right;">ID</th>
    <th style="width: 100px; text-align: center;">イベント日</th>
    <th style="width: ;">イベント名</th>
    <th style="width: 120px; text-align: center;">作成日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td style="text-align: right;"><%=h item.id %></td>
    <td style="text-align: center;"><%= h(item.event_date) %></td>
    <td><%= h(item.title) %></td>
    <td style="text-align: center;"><%= safe{item.created_at.strftime("%Y-%m-%d %H:%M")} %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
  <% end %>

</table>

<%= paginate @items %>
