<p class="form">基本情報</p>

<table class="show">
  <%= piece_base_view @item, :container => :tr %>
</table>

<br /><p class="form">タブ設定</p>

<div class="actionMenu">
  <%= link_to(:edit, portal_piece_recent_tab_tabs_path(@item.id)) if safe{@item.editable?} %>
</div>

<table class="show">
  <% Portal::Piece::RecentTabXml.find(:all, @piece).each_with_index do |item, idx| %>
  <tr>
    <th>タブ <%=h idx + 1 %></th>
    <td><%=h item.title %></td>
  </tr>
  <% end %>
</table>


<%= creator_view @item %>
