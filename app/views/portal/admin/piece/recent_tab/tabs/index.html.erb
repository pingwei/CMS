<%= render :partial => 'menu' %>

<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 200px;"><%= Portal::Piece::RecentTabXml.new(@piece).locale(:name) %></th>
    <th style="width: 200px;"><%= Portal::Piece::RecentTabXml.new(@piece).locale(:title) %></th>
    <th style="width: ;">一覧リンク</th>
    <th style="width: 80px; text-align: right;"><%= Portal::Piece::RecentTabXml.new(@piece).locale(:sort_no) %></th>
  </tr>

  <% @items.each do |item| %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item.name) %></td>
    <td><%=h item.name %></td>
    <td><%=h item.title %></td>
    <td><%=h item.more.blank? ? '（自動設定）' : item.more %></td>
    <td style="text-align: right;"><%=h item.sort_no %></td>
  </tr>
  <% end %>
</table>
