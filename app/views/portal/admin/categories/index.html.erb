<table class="index">

  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 20%;"><%= Portal::Category.new.locale(:name) %></th>
    <th style="width: ;"><%= Portal::Category.new.locale(:title) %></th>
    <th style="width: 80px; text-align: right;"><%= Portal::Category.new.locale(:sort_no) %></th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;"><%= Portal::Category.new.locale(:state) %></th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td><%=h item.name %></td>
    <td><%= link_to h(item.title), url_for(:action => :index, :parent => item) %></td>
    <td style="text-align: right;"><%= item.sort_no %></td>
    <td style="text-align: center;"><%= safe{item.updated_at.strftime('%Y-%m-%d %H:%M')} %></td>
    <td style="text-align: center;"><%= safe{item.status.name} %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
