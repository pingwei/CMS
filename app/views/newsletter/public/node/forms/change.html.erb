<div class="contentNewsletterForms">

<h2>メールマガジンの解除はこちら</h2>

<% form_for :item, :url => "#{Page.current_node.public_uri}change/" do |f| %>

<%= error_messages_for "item" %>

<div class="form">
  <% if !@content.deletion_body.blank? %><div class="body"><%= @content.deletion_body %></div><% end %>
</div>

  <div class="column">
    <div class="name">メールアドレス <span class="required">※</span></div>
    <div class="field"><%= f.text_field :unsubscribe_email, :class => 'textField' %></div>
  </div>

<div class="submitters">
  <input type="submit" name="unsubscribe" value="解除する" />
</div>

<% end %>

</div>
