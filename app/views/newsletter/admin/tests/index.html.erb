<%= render :partial => 'search' %>

<table class="index">

  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: ;"><%= Newsletter::Test.new.locale(:email) %></th>
    <th style="width: 250px;"><%= Newsletter::Test.new.locale(:name) %></th>
    <th style="width: 90px; text-align: center;"><%= Newsletter::Test.new.locale(:agent_state) %></th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td><%=h item.email %></td>
    <td><%=h item.name %></td>
    <td style="text-align: center;"><%= safe{item.agent_status.name} %></td>
    <td style="text-align: center;"><%= safe{item.updated_at.strftime("%Y-%m-%d %H:%M")} %></td>
    <td style="text-align: center;"><%= safe{item.status.name} %></td>
  <% end %>

</table>

<%= paginate @items %>
