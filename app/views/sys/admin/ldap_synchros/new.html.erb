<% form_for :item, :url => {:action => :create} do |f| %>

<%= f.error_messages %>

<%= render :partial => 'form', :locals => {:f => f} %>

<div class="submitters">

<div style="color: #b40; text-align: center;">
<span id="message"></span>
</div>

<%= f.submit '作成する', :onclick => "$('message').innerHTML='処理を開始しました。そのままでお待ちください。<br /><br />';" %>

</div>

<% end %>
