<%= render :partial => 'menu' %>

<table class="show">
  <tr>
    <th>ファイル名（保存用）</th>
    <td><%=h @item.name %></td>
  </tr><tr>
    <th>ファイル名（表示用）</th>
    <td><%=h @item.title %></td>
  </tr><tr>
    <th>アップロード日時</th>
    <td><%=h @item.created_at ? @item.created_at.strftime('%Y-%m-%d %H:%m') : '' %></td>
  </tr><tr>
    <th>ファイルサイズ</th>
    <td><%= @item.eng_unit %><br /><%= @item.image_size %></td>
  </tr><tr>
    <th>ファイル種別</th>
    <td><%= @item.mime_type %></td>
  </tr>
</table>
